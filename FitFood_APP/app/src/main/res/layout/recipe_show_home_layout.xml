<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/white_overlay_50">

        <ImageView
            app:srcCompat="@drawable/recipeadd_background"
            android:id="@+id/recipe_imageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_layout_title"
            android:background="@color/black_overlay_50"
            android:layout_marginTop="4dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recip_title"
                android:text="Roti de veau à l'échalotte"
                android:textColor="@color/accent"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal|bold" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_imageView"
            android:id="@+id/recipe_layout_info"
            android:background="@color/black_overlay_65"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/recipe_tag"
                android:id="@+id/recipe_iv_tag"
                android:layout_marginRight="4dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_info_tag"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:text="Plat principal / Facile / Omnivore"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_layout_info"
            android:id="@+id/recipe_layout_moreinfo"
            android:background="@color/black_overlay_65"
            android:padding="4dp">

            <ImageView
                app:srcCompat="@drawable/time_icon"
                android:id="@+id/recipe_iv_heattime"
                android:layout_marginRight="4dp"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:layout_width="30dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="2h30m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recip_tv_heattime"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>