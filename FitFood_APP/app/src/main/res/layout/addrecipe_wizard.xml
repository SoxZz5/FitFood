<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addrecipe_wizard">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/login_background"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/step_layout_steper"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_pager_tab_height"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:background="@color/accent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2.5dp"
            android:id="@+id/stepinfo1">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_pager_tab_height"
            android:layout_weight="1"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:background="@color/material_drawer_dark_selected"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2.5dp"
            android:id="@+id/stepinfo2">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_pager_tab_height"
            android:layout_weight="1"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:background="@color/material_drawer_dark_selected"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2.5dp"
            android:id="@+id/stepinfo3">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_pager_tab_height"
            android:layout_weight="1"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:background="@color/material_drawer_dark_selected"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2.5dp"
            android:id="@+id/stepinfo4">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_pager_tab_height"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:background="@color/material_drawer_dark_selected"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2.5dp"
            android:id="@+id/stepinfo5">

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/step_layout_title"
        android:layout_below="@+id/step_layout_steper">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipeadd_wizard_title"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginTop="2.5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipeadd_info_error"
            android:textColor="@color/md_deep_orange_A700"
            android:layout_marginBottom="2.5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/step_container"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_below="@+id/step_layout_title"
        android:layout_above="@+id/step_button" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:id="@+id/step_button">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wizard_bt_final"
                android:layout_weight="1"
                android:text="@string/wizard_final"
                android:textColor="@color/accent"
                android:background="@color/material_drawer_dark_selected"
                android:layout_gravity="bottom"
                android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wizard_bt_prev"
            android:layout_weight="1"
            android:text="@string/wizard_prev"
            android:textColor="@color/accent"
            android:background="@color/material_drawer_dark_selected"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wizard_bt_next"
            android:layout_weight="1"
            android:text="@string/wizard_next"
            android:textColor="@color/accent"
            android:background="@color/material_drawer_dark_selected"
            android:layout_gravity="bottom" />
    </LinearLayout>
</RelativeLayout>